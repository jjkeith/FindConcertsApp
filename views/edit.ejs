<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h1>Edit Profile</h1>
  </div>
</div>

<form action="/users/<%= user._id %>" method="POST">
  <input type="hidden" name="_method" value="PATCH" />
  <div class="form-group row">
    <label for="inputUsername" class="col-sm-2 col-sm-offset-3 form-control-label">Username</label>
    <div class="col-sm-4">
      <input type="text" class="form-control validate" id="inputUsername" value="<%= user.local.username %>" name="username">
    </div>
  </div>


  <div class="form-group row">
    <label for="inputEmail" class="col-sm-2 col-sm-offset-3 form-control-label">Email</label>
    <div class="col-sm-4">
      <input type="email" class="form-control validate" id="inputEmail3" value="<%= user.local.email %>" name="email">
    </div>
  </div>

  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-sm-offset-3 form-control-label">Zipcode</label>
    <div class="col-sm-4">
      <!-- <input type="number" class="form-control validate" id="inputZipcode" value="<%= user.local.zipcode %>"> -->
    </div>
  </div>

  <div class="form-group row">
    <label for="inputPassword" class="col-sm-2 col-sm-offset-3 form-control-label">Password</label>
    <div class="col-sm-4">
      <input type="password" class="form-control validate" id="inputPassword" placeholder="password" name="password">
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2 col-sm-offset-7">
      <button id="update-user" class="btn btn-primary" type="submit">Update Profile</button>
    </div>
  </div>
</form>
