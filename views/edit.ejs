<div id="background">
  <div class="wrapper">

    <div class="padding"></div>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h1>Edit Profile</h1>
  </div>
</div>

<form action="/users/<%= user._id %>" method="POST">
  <input type="hidden" name="_method" value="PATCH" />
  <div class="form-group row">
    <label for="inputUsername" class="col-sm-2 col-sm-offset-3 form-control-label">Username</label>
    <div class="col-sm-4">
      <input type="text" class="form-control validate" id="inputUsername" value="<%= user.local.username %>" name="username">
    </div>
  </div>


  <div class="form-group row">
    <label for="inputEmail" class="col-sm-2 col-sm-offset-3 form-control-label">Email</label>
    <div class="col-sm-4">
      <input type="email" class="form-control validate" id="inputEmail3" value="<%= user.local.email %>" name="email">
    </div>
  </div>

  <div class="form-group row">
    <label for="inputEmail" class="col-sm-2 col-sm-offset-3 form-control-label">Zipcode</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" id="inputZipcode" value="<%= user.local.zipcode %>">
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 col-sm-offset-3">
      <label for="inputPassword form-control-label">Password</label>
    </div>
    <div class="col-sm-4">
      <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password">
    </div>
  </div>

  <div class="row">
    <div class="col-sm-2 col-sm-offset-7">
      <button id="update-user" class="btn btn-primary" type="submit">Update Profile</button>
    </div>
  </div>
</form>

<div class="padding"></div>

<form action="/users/<%= user._id %>" method="POST">
  <input type="hidden" name="_method" value="DELETE" />
    <div class="form-group row">
      <div class="col-sm-2 col-sm-offset-7 delete-profile">
        <button type="delete-user" class="btn btn-danger" type="submit">Delete Profile</button>
      </div>
    </div>
  </form>
</div>
</div>
